{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "chatgpt-client",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "path": {
        "all":true
      },
      "fs": {
        "exists": true,
        "writeFile": true,
        "readFile": true,
        "readDir": true,
        "scope": [
          "$APPLOCALDATA/*",
          "$APPLOCALDATA/Prompt/*",
          "$APPLOCALDATA/Talkroom/*",
          "$APPLOCALDATA/Avatar/*"
        ]
      },
      "shell": {
        "all": false,
        "open": true
      },
      "protocol": {
        "asset": true,
        "assetScope": [ "$APPLOCALDATA/Avatar/*" ]
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "chatgptclient",
      "targets": "all"
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "chatgpt-client",
        "width": 800,
        "height": 600
      }
    ]
  }
}
